<h2>Items</h2>
<table class="table">
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Title</th>
      <th>Price</th>
      <th></th> 
    </tr>
  </thead>
  <tbody>
    {{#each items}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>${{this.price.toFixed(2)}}</td> 
        <td><a href="/items/delete/{{this.id}}" class="btn btn-danger" aria-label="Remove item {{this.title}}">Remove</a></td> 
      </tr>
    {{else}}
      <tr>
        <td colspan="4" class="text-center">No items available.</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#if message}}
<div class="alert alert-warning">{{message}}</div>
{{/if}}
