<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
            <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
        <hr />
        {{#if items.length}}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Post Date</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Published</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{title}}</td>
                                <td>{{#formatDate postDate}}{{/formatDate}}</td>
                                <td>${{price}}</td>
                                <td><a href="/items?category={{category}}">{{category}}</a></td>
                                <td>{{#if published}}true{{else}}false{{/if}}</td>
                                 <td><a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
          {{/if}}
    </div>
</div>
{{#unless items.length}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
{{/unless}}